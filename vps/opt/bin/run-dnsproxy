#!/bin/bash
start-stop-daemon -K -n dnsproxy >/dev/null 2>&1

start-stop-daemon -S -c nobody -b -o -q -m \
-p /opt/dnsproxy/dnsproxy-china.pid \
-x /opt/dnsproxy/dnsproxy -- \
-l 127.0.0.1 -p 5601 \
-u /opt/dnsproxy/cn-lite-tls-domain.txt \
-f 223.6.6.6 \
-f 119.29.29.29 \
-b 114.114.114.114 \
-b 1.2.4.8 \
--all-servers \
--edns \
--cache \
--cache-size=134217728 \
--cache-min-ttl=21600 \
--cache-optimistic \
--fastest-addr

start-stop-daemon -S -c nobody -b -o -q -m \
-p /opt/dnsproxy/dnsproxy-getway.pid \
-x /opt/dnsproxy/dnsproxy -- \
-l 0.0.0.0 -p 5333 \
-u 127.0.0.1:5301 \
--all-servers \
--edns \
--cache \
--cache-size=134217728 \
--cache-min-ttl=21600 \
--cache-optimistic \
--fastest-addr

start-stop-daemon -S -c root -b -o -q -m \
-p /opt/dnsproxy/dnsproxy-local.pid \
-x /opt/dnsproxy/dnsproxy -- \
-l 127.0.0.1 -p 53 \
-u 127.0.0.1:5301 \
--all-servers \
--edns \
--cache \
--cache-size=134217728 \
--cache-min-ttl=21600 \
--cache-optimistic \
--fastest-addr

